generator client {
  provider = "prisma-client-js"
  output   = "../generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AuthProvider {
  google
  email
}

model User {
  id         String  @id @default(uuid()) @db.Uuid
  email      String  @unique
  first_name String?
  last_name  String?
  photo_url  String?
  provider   AuthProvider @default(email) 

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
